<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.vova.fsmapplication.presentation.ui.fragments.FsmFragment">

        <ImageView
            android:id="@+id/image_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:src="@drawable/green_circle"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/image_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:src="@drawable/red_circle"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Text"
            android:textAllCaps="false"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_status"
            android:layout_centerInParent="true"
            android:layout_marginTop="48dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOCK"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/button_lock_x2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOCKx2"
                    android:textAllCaps="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_unlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UNLOCK"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/button_unlock_x2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UNLOCKx2"
                    android:textAllCaps="false" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</layout>
